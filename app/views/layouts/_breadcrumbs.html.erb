<!-- ブートストラップテーマとホームアイコンを表示するためにgretelを手動で設定-->
<% breadcrumbs do |links| %>
  <% if links.any? %>
    <ol class='breadcrumb'>
    <li><span class='glyphicon glyphicon-home' aria-hidden='true'></span></li>
    <% links.each_with_index do |link, index| %>
      <% if index != links.size - 1 %>
        <li><%= link_to link.text, link.url, class: (link.current? ? "current" : nil) %></li>
      <% else %>
        <li class='active'><%= link.text %></li>
      <% end %>
    <% end %>
    </ol>
  <% end %>
<% end %>
