<% breadcrumb :project_member, @project %>
<% provide(:title, t("project.title.confirm_member", project_name: @project.name)) %>
<h2><%= t("project.title.confirm_member", project_name: @project.name) %></h2>

<div class='row'>
  <div class='col-sm-offset-3 col-sm-6 well'>
    <%= form_for(@project_member, url: project_member_path(@project, @project_member, params: { invitation_token: @token }), class: 'form-horizontal') do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group text-center">
        <%= f.label t("project.project_member.invitation.item.project_name"), class: 'control-label' %>
        <p class='form-control-static'><%= @project.name %></p>
      </div>
      <div class="form-group">
        <div class='row'>
          <div class='col-sm-offset-4 col-sm-4'>
            <%= f.submit t("project.project_member.invitation.join"), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <p class="help-block text-center"><%= t("project.project_member.invitation.confirm_accept") %></p>
    <% end %>
  </div>
</div>